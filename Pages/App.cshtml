<div class="container">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img class="is-rounded" src="@Avatar" alt="Avatar">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4">@Username</p>
          <p class="subtitle is-6"><a href="/Profile?username=@Username">@Username</a></p>
        </div>
        
        <div class="buttons">
          <a href="/Settings">
            <button id="settings" class="button">
              <i class="fas fa-sliders-h"></i>
            </button>
          </a>
      </div>
    </div>
  </div>
</div>
</br>


<div class="container">

@if (Timeline.Count > 0)
{
  <h1 class="title">Timeline: </h1>

  <br>
}
  @foreach (dynamic post in Timeline)
  {
    <div class="card">
      <div class="card-content">
        <div class="media">

          <div class="media-left">
            <figure class="image is-48x48">
              <img class="is-rounded" src="@post.Useravatar" alt="Avatar">
            </figure>
          </div>

          <div class="media-content">
              <p class="title is-4">@post.Username</p>
              <p class="subtitle is-6">
                <a href="/Profile?username=@post.Username">
                  @post.Username
                </a>
              </p>
          </div>

        </div>
        <br>
        @post.Message
      </div>
      <footer class="card-footer">
        <form method="POST">
          <button class="button is-link is-light" asp-route-data="up,@post.id" asp-page-handler="Vote"><i class="fa-solid fa-arrow-up"></i> Upvote</button>
        </form>
        <div href="#" class="card-footer-item">
          @{ int counter = (int) post.Upvoter.Count - (int) post.Downvoter.Count;}
          @counter
        </div>
        <form method="POST">
          <button class="button is-link is-light" asp-route-data="down,@post.id" asp-page-handler="Vote"><i class="fa-solid fa-arrow-down"></i> Downvote</button>
        </form>
      </footer>
    </div>
    <br>
  }