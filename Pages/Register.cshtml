@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="text-center">
    <h1>Create your Versine account</h1>
    
    <form class="text-center " asp-action="form" method="post">
        <p class="h4 mb-4">Register</p>
    
    
        <input type="text" id="username" class="form-control mb-4" placeholder="Username" asp-for="Username">
    
        <input type="password" id="password" class="form-control" placeholder="Password" aria-describedby="password" asp-for="Password">
        <small id="passwordHelpBlock" class="form-text text-muted mb-4">
            At least 8 characters and 1 digit
        </small>
    
        <input type="text" id="ticket" class="form-control" placeholder="Invitation Ticket" aria-describedby="ticket" asp-for="Ticket">
        <small id="ticketHelpBlock" class="form-text text-muted mb-4">
            Your invitation ticket given by a peer
        </small>
        
        <button class="btn btn-info my-4 btn-block" type="submit">Sign in</button>
    
    
        <hr>
    
        <p>By clicking
            <em>Register</em> you agree to our
            <a href="/Privacy">terms of service</a>
    
    </form>
</div>
