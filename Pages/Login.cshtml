   <br>
<div class="container is-fullhd">
  <div class="notification">
   <p class="title is-1">
      <img class="image is-128x128" src="images/VersineLogoBlack.png">
     </p>
    <p class="subtitle is-3">Login into Versine:</p>
  </div>
  
</div>
<br>
<div class="container">
  <div class="section">
        
     
   <form class="text-center" asp-action="form" method="post">
      <div class="field">
      <p class="control has-icons-left has-icons-right">
         <input type="text" id="username" class="input" name="username" placeholder="Username" asp-for="Username">
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
      
      </p>
    </div>
    <div class="field">
      <p class="control has-icons-left">
         <input type="password" id="password" class="input" name="password" placeholder="Password" asp-for="Password">
        <span class="icon is-small is-left">
          <i class="fas fa-lock"></i>
        </span>
      </p>
    </div>
    <div class="field">
      <p class="control">
        <button class="button is-success">
          Login
        </button>
      </p>
    </div>
  </form>
 </div>
</div>
